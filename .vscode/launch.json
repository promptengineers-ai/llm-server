{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Python: FastAPI",
			"type": "python",
			"request": "launch",
			"module": "uvicorn",
			"args": [
				"server.api:app",
				"--log-level",
				"debug"
			],
			"jinja": true,
			"justMyCode": false,
			"envFile": "${workspaceFolder}/.env.local"
		},
		{
			"name": "Debug Single Test",
			"type": "python",
			"request": "launch",
			"module": "pytest",
			"args": [
				"-s",
				"tests/integration/test_main.py"
			],
			"envFile": "${workspaceFolder}/.env.local",
		}
	]
}
